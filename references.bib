	pmcid = {PMC4089020},
	keywords = {Female, Humans, Male, Sleep, Aging, Sex Factors, Biomedical Research, Congresses as Topic, Gonadal Steroid Hormones, Life Change Events, Research Report, Sex Characteristics, Societies, Medical, Women's Health},
	pages = {553--562},
	file = {Full Text:/Users/spitschan/Zotero/storage/II8P7XX8/Mallampalli and Carter - 2014 - Exploring sex and gender differences in sleep heal.pdf:application/pdf},
}

@article{redline_effects_2004,
	title = {The effects of age, sex, ethnicity, and sleep-disordered breathing on sleep architecture},
	volume = {164},
	issn = {0003-9926},
	doi = {10.1001/archinte.164.4.406},
	abstract = {BACKGROUND: Polysomnography is used to assess sleep quality and to gauge the functional effect of sleep disorders. Few population-based data are available to estimate the variation in sleep architecture across the population and the extent to which sleep-disordered breathing (SDB), a common health condition, contributes to poor sleep independent of other factors. The objective of this study was to describe the population variability in sleep quality and to quantify the independent associations with SDB.
METHODS: Cross-sectional analyses were performed on data from 2685 participants, aged 37 to 92 years, in a community-based multicenter cohort study. Dependent measures included the percentage time in each sleep stage, the arousal index, and sleep efficiency. Independent measures were age, sex, ethnicity, comorbidity status, and the respiratory disturbance index.
RESULTS: Lighter sleep was found in men relative to women and in American Indians and blacks relative to other ethnic groups. Increasing age was associated with impaired sleep in men, with less consistent associations in women. Notably, women had, on average, 106\% more slow wave sleep. Sleep-disordered breathing was associated with poorer sleep; however, these associations were generally smaller than associations with sex, ethnicity, and age. Current smokers had lighter sleep than ex-smokers or never smokers. Obesity had little effect on sleep.
CONCLUSIONS: Sleep architecture varies with sex, age, ethnicity, and SDB. Individual assessment of the effect of SDB on sleep quality needs to account for other host characteristics. Men, but not women, show evidence of poorer sleep with aging, suggesting important sex differences in sleep physiology.},
	language = {eng},
	number = {4},
	journal = {Archives of Internal Medicine},
	author = {Redline, Susan and Kirchner, H. Lester and Quan, Stuart F. and Gottlieb, Daniel J. and Kapur, Vishesh and Newman, Anne},
	month = feb,
	year = {2004},
	pmid = {14980992},
	keywords = {Adult, Female, Humans, Male, Sleep, Middle Aged, Aged, Multivariate Analysis, Aged, 80 and over, Sex Factors, Age Factors, Body Mass Index, Comorbidity, Sleep Apnea Syndromes},
	pages = {406--418},
